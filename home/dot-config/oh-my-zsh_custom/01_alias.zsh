# Alias's to modified commands
alias cp='cp -i'
alias mv='mv -i'

alias mkdir='mkdir -p'

alias cls='clear'

alias v='nvim .'
alias vi='nvim'
alias svi='sudo nvim'
alias vis='nvim "+set si"'

alias ip='ip -c'


alias fetch='hyfetch'

# Change directory aliases
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# cd into the old directory
alias bd='cd "$OLDPWD"'


# Show open ports
alias openports='netstat -nape --inet'

